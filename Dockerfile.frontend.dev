# Development Dockerfile for Next.js with hot reload
FROM node:20-alpine

# Install libc6-compat for alpine
RUN apk add --no-cache libc6-compat

WORKDIR /app

# Copy package files
COPY frontend/package*.json ./
RUN npm install

# Copy the frontend source
COPY frontend/ .

# Expose port
EXPOSE 3000

# Start development server
CMD ["npm", "run", "dev"]